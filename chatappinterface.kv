<Chat>:
    orientation: 'vertical'
    TextInput:
        id: ChatBox
    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 0
        size_hint: (1, None)

        TextInput:
            id: EntryBox
        Button:
            id: SendButton
            text: 'Send'
            size_hint: (0.3, 1)
            on_press:root.clickAction()